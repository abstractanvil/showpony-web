@require 'theme'

.live
  text-align center

  @media screen and (max-width: breakpoint-small)
    text-align left

  h1
    text-transform uppercase
    color background-tint
    font-size font-size-big

  article
    h1
      color text-color
      font-size font-size-base
      text-transform none
      font-weight bold
      font-family font-regular
