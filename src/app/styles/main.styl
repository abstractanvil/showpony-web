@require 'theme'

::selection
  background accent-light

::-moz-selection
  background accent-light

html
  box-sizing border-box

*, *:before, *:after
  box-sizing inherit

body
  background background-tint
  font-family font-regular
  font-size font-size-base
  color text-color

img
  max-width 100%

a
  color link-color

  &.active
    color accent-dark

  &:hover
    color accent-dark

em
  font-style italic

h1
  font-family 'Special Elite', monospace
  color background-tint

.content
  width 100%
  background content-background

section
  padding gutter-big 0
  max-width content-width
  margin 0 auto

  @media screen and (max-width: content-width)
    padding gutter-big

  @media screen and (max-width: breakpoint-small)
    padding gutter

article
  margin-bottom gutter-big

p
  margin-bottom 32px
  line-height 1.5em

figure
  margin-bottom gutter-big

figcaption
  text-align center

.embed-container
  position relative
  padding-bottom 56.25%
  height 0
  overflow hidden
  max-width 100%

  iframe, object, embed
    position absolute
    top 0
    left 0
    width 100%
    height 100%

#bio
  a
    font-family font-regular
    text-decoration underline





